                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Check-in DateTime"
                                    app:endIconMode="clear_text"
                                    app:endIconDrawable="@drawable/ic_cancel"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_text_lodging_check_in_date_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="10dp"
                                android:orientation="horizontal">

                                <!--                            <EditText-->
                                <!--                                android:id="@+id/edit_text_lodging_check_out_date_time"-->
                                <!--                                android:layout_width="wrap_content"-->
                                <!--                                android:layout_height="wrap_content"-->
                                <!--                                android:layout_weight="1"-->
                                <!--                                android:ems="10"-->
                                <!--                                android:hint="Check-out DateTime"-->
                                <!--                                android:inputType="textPersonName"-->
                                <!--                                android:text="" />-->

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/outlinedTextFieldLodgingCheck-outDateTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Check-out DateTime"
                                    app:endIconMode="clear_text"
                                    app:endIconDrawable="@drawable/ic_cancel"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_text_lodging_check_out_date_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        />

                                </com.google.android.material.textfield.TextInputLayout>



                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>


