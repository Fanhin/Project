<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="#F5F5F5"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#3A3086" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="bottom"
        android:background="#3A3086" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorAccent" />



            <!--            <ImageView-->
            <!--                android:id="@+id/image_thumbnail"-->
            <!--                android:layout_width="100dp"-->
            <!--                android:layout_height="match_parent"-->

            <!--                android:scaleType="centerCrop"-->


            <!--                android:src="@drawable/ic_double_arrow" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/text_view_lodging_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"

                        android:maxLines="1"
                        android:text="Title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                </LinearLayout>


                <TextView
                    android:id="@+id/text_view_check_in_date"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_title"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Date" />

                <TextView
                    android:id="@+id/text_view_check_out_date"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_check_in_date"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Date" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>