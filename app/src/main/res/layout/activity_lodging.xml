                                <!--                                android:ems="10"-->
                                <!--                                android:hint="Website"-->
                                <!--                                android:inputType="textPersonName"-->
                                <!--                                android:text="" />-->

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/outlinedTextFieldLodgingWebsite"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Website"
                                    app:endIconMode="clear_text"
                                    app:endIconDrawable="@drawable/ic_cancel"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_text_lodging_website"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        />
                                </com.google.android.material.textfield.TextInputLayout>

                                <!--                            <EditText-->
                                <!--                                android:id="@+id/edit_text_lodging_email"-->
                                <!--                                android:layout_width="match_parent"-->
                                <!--                                android:layout_height="wrap_content"-->
                                <!--                                android:layout_weight="1"-->
                                <!--                                android:ems="10"-->
                                <!--                                android:hint="Email"-->
                                <!--                                android:inputType="textPersonName"-->
                                <!--                                android:text="" />-->

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/outlinedTextFieldLodgingEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Email"
                                    app:endIconMode="clear_text"
                                    app:endIconDrawable="@drawable/ic_cancel"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_text_lodging_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/outlinedTextFieldEmailExpense"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:endIconMode="clear_text"
                                    app:endIconDrawable="@drawable/ic_cancel"
                                    android:hint="Expense"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_text_lodging_expense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        />
                                </com.google.android.material.textfield.TextInputLayout>


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/pickImagesLodgingBtn"
                            android:layout_width="wrap_content"
                            style="@style/Widget.MyApp.Button"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="Add Images"
                            android:textSize="12dp" />
                        <ImageSwitcher
                            android:layout_width="match_parent"
                            android:id="@+id/imageLodgingIs"
                            android:layout_height="450dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/previousLodgingBtn"
                                android:text="Previous"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <Button
                                android:id="@+id/nextLodgingBtn"
                                android:text="Next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>



                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>




</LinearLayout>
